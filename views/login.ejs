<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <title>Registrasi dan Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0; padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      /* --- BACKGROUND IMAGE ADDED --- */
      background: url("/image/bg.jpg") no-repeat center center fixed;
      background-size: cover;       /* supaya memenuhi layar */
      background-position: center;  /* biar center */
      background-repeat: no-repeat; /* jangan diulang */
    }
    .container {
      background: white;
      max-width: 600px;
      height: 250px;
      width: 90%; 
      padding: 20px 25px 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      text-align: center;
    }
    h2 { margin-bottom: 20px; color: #d80000; }
    input, select {
      width: 100%;
      padding: 10px;
      margin: 8px 0 12px;
      border: 1.8px solid #f5c6cb;
      border-radius: 5px;
      font-size: 20px;
      box-sizing: border-box;
    }
    button {
      width: 80%;
      padding: 12px 0;
      background: #d80000;
      border: none;
      color: white;
      font-weight: bold;
      font-size: 20px;
      cursor: pointer;
      border-radius: 70px;
      margin-top: 10px;
    }
    button:hover { background: #b30000; }
    .message {
      margin-top: 15px;
      font-weight: bold;
      padding: 10px;
      border-radius: 6px;
      display: none;
    }
    .message.success {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }
    .message.error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    .password-container {
      position: relative;
      width: 100%;
      margin-bottom: 12px;
    }
    #togglePassword {
      position: absolute;
      top: 50%;
      right: 15px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #888;
      font-size: 30px;
    }

    /* Styles for tablets and small laptops */
    @media only screen and (max-width: 1080px) {
      .container {
        padding: 20px;
      }
      h2 {
        font-size: 1.8rem;
        margin-bottom: 20px;
      }
      input, select {
        font-size: 1.1rem;
        padding: 12px;
        margin: 8px 0 12px;
      }
      button {
        font-size: 1.2rem;
        padding: 12px 0;
        border-radius: 70px;
      }
      #togglePassword {
        right: 15px;
        font-size: 20px;
      }
      .message {
        font-size: 1rem;
        padding: 10px;
      }
    }
    
    /* --- NEW STYLES FOR SMALLER PHONES --- */
    @media (max-width: 480px) {
      .container {
        padding: 20px 15px; /* Reduce side padding */
        width: 85%; /* Use a bit more screen width */
      }
      h2 {
        font-size: 1.5rem; /* Make heading smaller */
      }
      input, select, button {
        font-size: 1rem; /* Make text in form fields smaller */
        padding: 10px;
      }
      button {
        width: 90%;
      }
      #togglePassword {
        font-size: 18px; /* Adjust icon size */
      }
    }

  </style>
</head>
<body>
  <div class="container">
    <div id="login-box">
      <h2>Login dengan NIP/NIK</h2>

      <form action="/auth/login" method="POST">
        
        <input type="text" id="login-nip" name="nip" placeholder="Masukkan NIP/NIK Anda" required />
        
        <div class="password-container">
          <input type="password" id="password" name="password" placeholder="Masukkan Password Anda" required />
          <i class="fas fa-eye-slash" id="togglePassword"></i>
        </div>
        
        <button type="submit">Login</button>
      </form>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="message error" style="display: block;">
          <%= error %>
        </div>
      <% } %>
      
    </div>
  </div>

  <script>
    // Visual effect script for toggling password visibility
    (function(){
      const toggle = document.getElementById('togglePassword');
      if (!toggle) return;
      const pwdInput = document.getElementById('password');
      toggle.addEventListener('click', () => {
        const isPwd = pwdInput.getAttribute('type') === 'password';
        pwdInput.setAttribute('type', isPwd ? 'text' : 'password');
        toggle.classList.toggle('fa-eye');
        toggle.classList.toggle('fa-eye-slash');
      });
    })();
  </script>
</body>
</html>